---
import ImagePlaceholder from './ImagePlaceholder.astro';

interface Props {
  title: string;
  description: string;
  slug: string;
  date: Date;
  categories: string[];
  image?: string;
  layout?: 'horizontal' | 'vertical';
}

const { title, description, slug, date, categories, image, layout = 'horizontal' } = Astro.props;

function formatDate(date: Date) {
  return new Intl.DateTimeFormat('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
}

// 分类颜色映射
const categoryColorMap: Record<string, string> = {
  '思考': '#A855F7',
  '技术': '#06B6D4',
  'ACM': '#06B6D4',
  '基础算法': '#06B6D4',
  '项目': '#06B6D4',
  '生活': '#F97316',
  '随笔': '#F97316',
};

const defaultColor = '#A855F7';

// 获取主分类的颜色（使用第一个分类）
const primaryCategory = categories?.[0] || '';
const brandColor = categoryColorMap[primaryCategory] || defaultColor;
---

<article class={`group card-item ${layout === 'horizontal' ? '' : 'h-full'}`} style={`--brand-color: ${brandColor};`}>
  <a href={`/blog/${slug}`} class={`block ${layout === 'horizontal' ? '' : 'h-full'}`}>
    {layout === 'horizontal' ? (
      <div class="flex flex-col md:flex-row gap-6">
        <div class="card-img-wrapper md:w-1/3 aspect-video md:aspect-[4/3] overflow-hidden rounded-lg">
          {image ? (
            <img
              src={image}
              alt={title}
              class="card-img w-full h-full object-cover"
            />
          ) : (
            <ImagePlaceholder alt="博客封面" aspectRatio="4/3" class="card-img-placeholder w-full h-full" />
          )}
        </div>
        <div class="flex-1">
          <div class="flex items-center gap-3 mb-3">
            {categories.map(cat => (
              <span class="card-category text-xs font-medium uppercase tracking-wider" style={`color: ${categoryColorMap[cat] || defaultColor};`}>
                {cat}
              </span>
            ))}
            <span class="text-xs text-[var(--text-muted)]">
              {formatDate(date)}
            </span>
          </div>
          <h3 class="card-title text-xl md:text-2xl font-serif font-semibold mb-2 flex items-start gap-3">
            <span class="dot"></span>
            <span>{title}</span>
          </h3>
          <p class="text-[var(--text-secondary)] line-clamp-2">
            {description}
          </p>
        </div>
      </div>
    ) : (
      <div class="h-full flex flex-col">
        <div class="card-img-wrapper aspect-[4/3] overflow-hidden rounded-lg mb-4">
          {image ? (
            <img
              src={image}
              alt={title}
              class="card-img w-full h-full object-cover"
            />
          ) : (
            <ImagePlaceholder alt="博客封面" aspectRatio="4/3" class="card-img-placeholder w-full h-full" />
          )}
        </div>
        <div class="flex items-center gap-2 mb-2">
          {categories.slice(0, 2).map(cat => (
            <span class="card-category text-xs font-medium uppercase tracking-wider" style={`color: ${categoryColorMap[cat] || defaultColor};`}>
              {cat}
            </span>
          ))}
        </div>
        <h3 class="card-title text-lg font-serif font-semibold mb-2 line-clamp-2 flex items-start gap-3">
          <span class="dot mt-1.5"></span>
          <span>{title}</span>
        </h3>
        <p class="text-sm text-[var(--text-secondary)] line-clamp-2 flex-1">
          {description}
        </p>
        <span class="text-xs text-[var(--text-muted)] mt-3">
          {formatDate(date)}
        </span>
      </div>
    )}
  </a>
</article>

<style>
  /* Card item styles */
  .card-item {
    transition: opacity 0.3s ease;
  }

  /* Image grayscale effect */
  .card-img-wrapper {
    overflow: hidden;
    border-radius: 8px;
  }

  .card-img,
  :global(.card-img-placeholder) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(100%);
    transition: all 0.3s ease;
  }

  .card-item:hover .card-img,
  .card-item:hover :global(.card-img-placeholder) {
    filter: grayscale(0%);
    transform: scale(1.05);
  }

  /* Dot indicator */
  .dot {
    display: inline-block;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--brand-color);
    flex-shrink: 0;
    transition: box-shadow 0.3s ease;
  }

  .card-item:hover .dot {
    box-shadow: 0 0 8px var(--brand-color);
  }

  /* Title styles */
  .card-title {
    transition: color 0.3s ease;
  }

  .card-item:hover .card-title {
    color: var(--brand-color);
  }

  /* Category text styles - no capsule */
  .card-category {
    font-size: 12px;
    transition: color 0.3s ease;
  }

  /* Card list hover effect - siblings dimming */
  :global(.card-list:hover .card-item) {
    opacity: 0.5;
    transition: all 0.3s ease;
  }

  :global(.card-list:hover .card-item:hover) {
    opacity: 1;
  }
</style>

---
import ImagePlaceholder from './ImagePlaceholder.astro';

interface Props {
  title: string;
  description: string;
  slug: string;
  date: Date;
  categories: string[];
  image?: string;
  layout?: 'horizontal' | 'vertical';
}

const { title, description, slug, date, categories, image, layout = 'horizontal' } = Astro.props;

function formatDate(date: Date) {
  return new Intl.DateTimeFormat('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
}
---

<article class={`group ${layout === 'horizontal' ? '' : 'h-full'}`}>
  <a href={`/blog/${slug}`} class={`block ${layout === 'horizontal' ? '' : 'h-full'}`}>
    {layout === 'horizontal' ? (
      <div class="flex flex-col md:flex-row gap-6">
        <div class="md:w-1/3 aspect-video md:aspect-[4/3] overflow-hidden rounded-lg img-hover">
          {image ? (
            <img
              src={image}
              alt={title}
              class="w-full h-full object-cover"
            />
          ) : (
            <ImagePlaceholder alt="博客封面" aspectRatio="4/3" class="w-full h-full" />
          )}
        </div>
        <div class="flex-1">
          <div class="flex items-center gap-3 mb-3">
            {categories.map(cat => (
              <span class="text-xs font-medium text-[var(--text-muted)] uppercase tracking-wider">
                {cat}
              </span>
            ))}
            <span class="text-xs text-[var(--text-muted)]">
              {formatDate(date)}
            </span>
          </div>
          <h3 class="text-xl md:text-2xl font-serif font-semibold mb-2 group-hover:text-[var(--text-secondary)] transition-colors">
            {title}
          </h3>
          <p class="text-[var(--text-secondary)] line-clamp-2">
            {description}
          </p>
        </div>
      </div>
    ) : (
      <div class="h-full flex flex-col">
        <div class="aspect-[4/3] overflow-hidden rounded-lg img-hover mb-4">
          {image ? (
            <img
              src={image}
              alt={title}
              class="w-full h-full object-cover"
            />
          ) : (
            <ImagePlaceholder alt="博客封面" aspectRatio="4/3" class="w-full h-full" />
          )}
        </div>
        <div class="flex items-center gap-2 mb-2">
          {categories.slice(0, 2).map(cat => (
            <span class="text-xs font-medium text-[var(--text-muted)] uppercase tracking-wider">
              {cat}
            </span>
          ))}
        </div>
        <h3 class="text-lg font-serif font-semibold mb-2 group-hover:text-[var(--text-secondary)] transition-colors line-clamp-2">
          {title}
        </h3>
        <p class="text-sm text-[var(--text-secondary)] line-clamp-2 flex-1">
          {description}
        </p>
        <span class="text-xs text-[var(--text-muted)] mt-3">
          {formatDate(date)}
        </span>
      </div>
    )}
  </a>
</article>

<section class="entries-section">
  <div class="entries-container">

    <a href="/blog" class="entry-card entry-blog">
      <div class="entry-frame">
        <div class="entry-image-wrapper">
          <img src="/assets/images/card-blog.jpg" alt="Blog" loading="lazy">
        </div>
      </div>
      <div class="entry-info">
        <h3 class="entry-title">Blog</h3>
        <p class="entry-desc">思考观点 · 技术笔记</p>
      </div>
      <div class="entry-line"></div>
    </a>

    <a href="/projects" class="entry-card entry-projects">
      <div class="entry-frame">
        <div class="entry-image-wrapper">
          <img src="/assets/images/card-projects.jpg" alt="Projects" loading="lazy">
        </div>
      </div>
      <div class="entry-info">
        <h3 class="entry-title">Projects</h3>
        <p class="entry-desc">案例展示 · 开源作品</p>
      </div>
      <div class="entry-line"></div>
    </a>

    <a href="/videos" class="entry-card entry-videos">
      <div class="entry-frame">
        <div class="entry-image-wrapper">
          <img src="/assets/images/card-videos.jpg" alt="Videos" loading="lazy">
        </div>
      </div>
      <div class="entry-info">
        <h3 class="entry-title">Videos</h3>
        <p class="entry-desc">教程资源 · 分享推荐</p>
      </div>
      <div class="entry-line"></div>
    </a>

  </div>
</section>

<script is:inline>
  // 入场动画 - 使用 Intersection Observer 当画框卡片滚入视口时触发
  const entriesObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const cards = entry.target.querySelectorAll('.entry-card');
        cards.forEach(card => {
          card.classList.add('animate-in');
        });
        entriesObserver.unobserve(entry.target);
      }
    });
  }, { threshold: 0.2 });

  const entriesSection = document.querySelector('.entries-section');
  if (entriesSection) {
    entriesObserver.observe(entriesSection);
  }
</script>

<style>
  /* ===== 入口区域 ===== */
  .entries-section {
    padding: 80px 0;
    border-top: 1px solid #262626;
    border-bottom: 1px solid #262626;
  }

  .entries-container {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    gap: 48px;
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 24px;
  }

  /* ===== 单个卡片 ===== */
  .entry-card {
    display: block;
    text-decoration: none;
    width: 300px;
    cursor: pointer;
    position: relative;
    will-change: transform, opacity;
  }

  /* 键盘导航焦点样式 */
  .entry-card:focus-visible {
    outline: 2px solid currentColor;
    outline-offset: 4px;
    border-radius: 4px;
  }

  .entry-blog:focus-visible {
    outline-color: #A855F7;
  }

  .entry-projects:focus-visible {
    outline-color: #06B6D4;
  }

  .entry-videos:focus-visible {
    outline-color: #F97316;
  }

  /* ===== 画框容器 ===== */
  .entry-frame {
    background: #141414;
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 4px;
    padding: 12px;
    transition: transform 0.6s cubic-bezier(0.23, 1, 0.32, 1),
                border-color 0.6s cubic-bezier(0.23, 1, 0.32, 1),
                box-shadow 0.6s cubic-bezier(0.23, 1, 0.32, 1);
    overflow: hidden;
  }

  /* ===== 图片 ===== */
  .entry-image-wrapper {
    overflow: hidden;
    border-radius: 2px;
    position: relative;
  }

  .entry-image-wrapper img {
    width: 100%;
    height: auto;
    display: block;
    transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
    filter: grayscale(30%) brightness(0.9);
  }

  /* ===== 图片上的彩色叠加层（默认微透明，hover 消失） ===== */
  .entry-image-wrapper::after {
    content: '';
    position: absolute;
    inset: 0;
    opacity: 0.12;
    transition: opacity 0.6s ease;
    pointer-events: none;
  }

  .entry-blog .entry-image-wrapper::after {
    background: #7C3AED;
  }

  .entry-projects .entry-image-wrapper::after {
    background: #0891B2;
  }

  .entry-videos .entry-image-wrapper::after {
    background: #EA580C;
  }

  /* ===== 文字区域 ===== */
  .entry-info {
    padding-top: 20px;
    text-align: left;
  }

  .entry-title {
    font-family: 'Cormorant Garamond', 'Playfair Display', Georgia, serif;
    font-size: 24px;
    font-weight: 700;
    color: #ffffff;
    margin: 0 0 6px 0;
    transition: color 0.4s ease;
    letter-spacing: 0.02em;
  }

  .entry-desc {
    font-size: 14px;
    color: #737373;
    margin: 0;
    letter-spacing: 0.05em;
    transition: color 0.4s ease;
  }

  /* ===== 底部品牌色线条 ===== */
  .entry-line {
    height: 2px;
    margin-top: 16px;
    border-radius: 1px;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.5s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .entry-blog .entry-line {
    background: #7C3AED;
  }

  .entry-projects .entry-line {
    background: #0891B2;
  }

  .entry-videos .entry-line {
    background: #EA580C;
  }

  /* ===== Hover 效果 ===== */

  /* 画框：边框亮起 + 微妙抬升 */
  .entry-card:hover .entry-frame {
    transform: translateY(-6px);
  }

  .entry-blog:hover .entry-frame {
    border-color: rgba(124, 58, 237, 0.4);
    box-shadow: 0 12px 40px rgba(124, 58, 237, 0.15);
  }

  .entry-projects:hover .entry-frame {
    border-color: rgba(8, 145, 178, 0.4);
    box-shadow: 0 12px 40px rgba(8, 145, 178, 0.15);
  }

  .entry-videos:hover .entry-frame {
    border-color: rgba(234, 88, 12, 0.4);
    box-shadow: 0 12px 40px rgba(234, 88, 12, 0.15);
  }

  /* 图片：去灰 + 微妙放大 */
  .entry-card:hover .entry-image-wrapper img {
    filter: grayscale(0%) brightness(1);
    transform: scale(1.03);
  }

  /* 彩色叠加层消失 */
  .entry-card:hover .entry-image-wrapper::after {
    opacity: 0;
  }

  /* 标题变色 */
  .entry-blog:hover .entry-title {
    color: #A855F7;
  }

  .entry-projects:hover .entry-title {
    color: #06B6D4;
  }

  .entry-videos:hover .entry-title {
    color: #F97316;
  }

  /* 描述文字变亮 */
  .entry-card:hover .entry-desc {
    color: #a3a3a3;
  }

  /* 底部线条展开 */
  .entry-card:hover .entry-line {
    transform: scaleX(1);
  }

  /* ===== 非 hover 卡片退后 ===== */
  .entries-container:hover .entry-card:not(:hover) {
    opacity: 0.6;
    transition: opacity 0.5s ease;
  }

  /* ===== 入场动画 ===== */
  .entry-card {
    opacity: 0;
    transform: translateY(30px);
  }

  .entry-card.animate-in {
    opacity: 1;
    transform: translateY(0);
    transition: opacity 0.8s cubic-bezier(0.23, 1, 0.32, 1),
                transform 0.8s cubic-bezier(0.23, 1, 0.32, 1);
    will-change: auto;
  }

  .entry-blog.animate-in {
    transition-delay: 0.1s;
  }

  .entry-projects.animate-in {
    transition-delay: 0.3s;
  }

  .entry-videos.animate-in {
    transition-delay: 0.5s;
  }

  /* ===== 响应式 ===== */
  @media (max-width: 960px) {
    .entries-container {
      gap: 32px;
    }

    .entry-card {
      width: 260px;
    }
  }

  @media (max-width: 768px) {
    .entries-container {
      flex-direction: column;
      align-items: center;
      gap: 40px;
    }

    .entry-card {
      width: 100%;
      max-width: 340px;
    }

    .entries-container:hover .entry-card:not(:hover) {
      opacity: 1;
    }
  }

  /* ===== 减少动画偏好 ===== */
  @media (prefers-reduced-motion: reduce) {
    .entry-card,
    .entry-frame,
    .entry-image-wrapper img,
    .entry-image-wrapper::after,
    .entry-title,
    .entry-desc,
    .entry-line {
      transition: none !important;
      animation: none !important;
    }

    .entry-card {
      opacity: 1;
      transform: none;
    }
  }
</style>

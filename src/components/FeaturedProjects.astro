---
const projects = [
  {
    image: '/assets/images/project-ai-daily.jpg',
    title: 'AI 日报邮件系统',
    description: '自动收集 AI 领域最新论文、博客和新闻，每日发送摘要邮件',
    tags: ['Python', 'GitHub Actions', 'SMTP'],
    links: [
      { label: 'GitHub →', href: '#' },
      { label: 'Demo →', href: '#' }
    ]
  },
  {
    image: '/assets/images/project-personal-blog.jpg',
    title: '个人博客系统',
    description: '基于 Astro 搭建的复古未来主义个人博客，融合素描质感配图体系与品牌色系统',
    tags: ['Astro', 'Tailwind CSS', 'TypeScript'],
    links: [
      { label: 'Demo →', href: 'https://rollingtherock.blog' }
    ]
  }
];
---

<section class="featured-projects py-20 md:py-[80px] border-t border-[#262626]">
  <div class="container-wide">
    <!-- Section Header -->
    <div class="flex items-center justify-between mb-8">
      <h2 class="section-title-premium" style="font-family: var(--font-display) !important;">精选项目</h2>
      <a
        href="/projects"
        class="text-[#A855F7] hover:underline transition-all"
      >
        查看全部 →
      </a>
    </div>

    <!-- Projects Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {projects.map((project) => (
        <article
          class="project-card group rounded-2xl p-8 card-premium hover:-translate-y-1 transition-transform duration-300"
          style="
            border-left: 3px solid;
            border-image: linear-gradient(to bottom, #06B6D4, #A855F7) 1;
          "
        >
          {project.image ? (
            <div class="aspect-video rounded-lg overflow-hidden mb-4">
              <img
                src={project.image}
                alt={project.title}
                class="w-full h-full object-cover"
              />
            </div>
          ) : (
            <div class="project-icon text-5xl mb-4">{project.icon}</div>
          )}

          <h3 class="text-xl font-bold text-white mb-3 group-hover:text-[#06B6D4] transition-colors">
            {project.title}
          </h3>

          <p class="text-[#a3a3a3] text-base mb-4">
            {project.description}
          </p>

          <div class="project-tags flex flex-wrap gap-2 mb-6">
            {project.tags.map((tag) => (
              <span
                class="px-3 py-1 text-[12px] text-[#a3a3a3] rounded-lg"
                style="border: 1px solid #333; background: transparent;"
              >
                {tag}
              </span>
            ))}
          </div>

          <div class="project-links flex gap-4">
            {project.links.map((link) => (
              <a
                href={link.href}
                class="text-[#06B6D4] hover:underline text-sm"
              >
                {link.label}
              </a>
            ))}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

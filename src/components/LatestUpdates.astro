---
import { getCollection } from 'astro:content';

// 获取博客和项目数据
const blogs = await getCollection('blog');
const projects = await getCollection('projects');

// 处理博客数据
const blogItems = blogs.map(blog => {
  // 确定分类：优先使用 categories 字段，包含"思考"/"技术"/"生活"
  let category = '博客';
  const categories = blog.data.categories || [];
  if (categories.includes('思考')) category = '思考';
  else if (categories.includes('技术') || categories.includes('ACM') || categories.includes('基础算法')) category = '技术';
  else if (categories.includes('生活') || categories.includes('随笔')) category = '生活';

  return {
    title: blog.data.title,
    date: blog.data.date,
    image: blog.data.image || '',
    category,
    slug: blog.slug,
    type: 'blog',
    url: `/blog/${blog.slug}`
  };
});

// 处理项目数据
const projectItems = projects.map(project => ({
  title: project.data.title,
  date: project.data.date,
  image: project.data.image || '',
  category: '项目',
  slug: project.slug,
  type: 'project',
  url: `/projects/${project.slug}`
}));

// 合并并排序（按日期从新到旧）
const allItems = [...blogItems, ...projectItems].sort(
  (a, b) => b.date.valueOf() - a.date.valueOf()
);

// 取前4条
const latestItems = allItems.slice(0, 4);

// 格式化日期
function formatDate(date: Date) {
  return `${date.getFullYear()}.${String(date.getMonth() + 1).padStart(2, '0')}.${String(date.getDate()).padStart(2, '0')}`;
}
---

<section class="latest-section">
  <div class="latest-inner">
    <div class="latest-header">
      <div class="latest-header-left">
        <h2 class="latest-heading">最新动态</h2>
        <span class="latest-subheading">Latest Updates</span>
      </div>
      <a href="/blog" class="latest-view-all">
        查看全部 <span class="latest-view-arrow">→</span>
      </a>
    </div>

    <div class="latest-grid">
      {latestItems.map((item) => (
        <a href={item.url} class="latest-card" data-category={item.category}>
          <div class="latest-card-image">
            <img src={item.image} alt={item.title} />
          </div>
          <div class="latest-card-info">
            <h3 class="latest-card-title">
              <span class="latest-card-dot"></span>
              {item.title}
            </h3>
            <div class="latest-card-meta">
              <span class="latest-card-tag">{item.category}</span>
              <span class="latest-card-date">{formatDate(item.date)}</span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<script is:inline>
  // 入场动画
  const latestObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const cards = document.querySelectorAll('.latest-card');
        cards.forEach(card => card.classList.add('animate-in'));
        latestObserver.disconnect();
      }
    });
  }, { threshold: 0.15 });

  const latestSection = document.querySelector('.latest-section');
  if (latestSection) {
    latestObserver.observe(latestSection);
  }
</script>

<style>
  /* ===== 最新动态区域 ===== */
  .latest-section {
    padding: 60px 0;
    border-bottom: 1px solid #1a1a1a;
  }

  .latest-inner {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 24px;
  }

  /* ===== 标题区域 ===== */
  .latest-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 32px;
  }

  .latest-header-left {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .latest-heading {
    font-family: 'Cormorant Garamond', 'Playfair Display', Georgia, serif;
    font-size: 32px;
    font-weight: 700;
    color: #e5e5e5;
    margin: 0;
    letter-spacing: 0.02em;
  }

  .latest-subheading {
    font-family: 'Courier New', 'SF Mono', monospace;
    font-size: 12px;
    color: #3f3f3f;
    letter-spacing: 0.15em;
    text-transform: uppercase;
  }

  .latest-view-all {
    font-family: 'Courier New', 'SF Mono', monospace;
    font-size: 13px;
    color: #525252;
    text-decoration: none;
    transition: color 0.4s ease;
    white-space: nowrap;
  }

  .latest-view-all:hover {
    color: #e5e5e5;
  }

  .latest-view-arrow {
    display: inline-block;
    transition: transform 0.4s ease;
  }

  .latest-view-all:hover .latest-view-arrow {
    transform: translateX(4px);
  }

  /* ===== 4列网格 ===== */
  .latest-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
  }

  /* ===== 单张卡片 ===== */
  .latest-card {
    display: block;
    text-decoration: none;
    cursor: pointer;
    transition: opacity 0.5s ease;
  }

  /* ===== 卡片图片 ===== */
  .latest-card-image {
    position: relative;
    overflow: hidden;
    border-radius: 4px;
    margin-bottom: 12px;
    aspect-ratio: 16 / 9;
  }

  .latest-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    filter: grayscale(20%) brightness(0.9);
    transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
  }

  /* ===== 卡片文字 ===== */
  .latest-card-info {
    padding: 0 2px;
  }

  .latest-card-title {
    font-family: 'Cormorant Garamond', 'Playfair Display', Georgia, serif;
    font-size: 17px;
    font-weight: 600;
    color: #d4d4d4;
    margin: 0 0 8px 0;
    line-height: 1.3;
    transition: color 0.4s ease;
    display: flex;
    align-items: baseline;
    gap: 8px;
  }

  /* 品牌色圆点 */
  .latest-card-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    flex-shrink: 0;
    display: inline-block;
    position: relative;
    top: -1px;
    transition: box-shadow 0.4s ease;
  }

  /* ===== 分类标签 + 日期 ===== */
  .latest-card-meta {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .latest-card-tag {
    font-family: 'Courier New', 'SF Mono', monospace;
    font-size: 11px;
    letter-spacing: 0.08em;
    transition: color 0.4s ease;
  }

  .latest-card-date {
    font-family: 'Courier New', 'SF Mono', monospace;
    font-size: 11px;
    color: #3f3f3f;
    letter-spacing: 0.05em;
  }

  .latest-card-date::before {
    content: '·';
    margin-right: 8px;
    color: #333;
  }

  /* ===== 品牌色系统 ===== */

  /* 思考类 - 紫色 */
  [data-category="思考"] .latest-card-dot,
  [data-category="博客"] .latest-card-dot {
    background: #7C3AED;
  }
  [data-category="思考"] .latest-card-tag {
    color: #A855F7;
  }

  /* 技术类 - 青色 */
  [data-category="技术"] .latest-card-dot {
    background: #0891B2;
  }
  [data-category="技术"] .latest-card-tag {
    color: #06B6D4;
  }

  /* 生活类 - 橙色 */
  [data-category="生活"] .latest-card-dot {
    background: #EA580C;
  }
  [data-category="生活"] .latest-card-tag {
    color: #F97316;
  }

  /* 项目类 - 青色 */
  [data-category="项目"] .latest-card-dot {
    background: #0891B2;
  }
  [data-category="项目"] .latest-card-tag {
    color: #06B6D4;
  }

  /* ===== Hover 效果 ===== */

  /* 图片去灰变亮 */
  .latest-card:hover .latest-card-image img {
    filter: grayscale(0%) brightness(1.1);
    transform: scale(1.03);
  }

  /* 标题变品牌色 */
  [data-category="思考"]:hover .latest-card-title,
  [data-category="博客"]:hover .latest-card-title {
    color: #A855F7;
  }

  [data-category="技术"]:hover .latest-card-title {
    color: #06B6D4;
  }

  [data-category="生活"]:hover .latest-card-title {
    color: #F97316;
  }

  [data-category="项目"]:hover .latest-card-title {
    color: #06B6D4;
  }

  /* 圆点发光 */
  [data-category="思考"]:hover .latest-card-dot {
    box-shadow: 0 0 8px rgba(124, 58, 237, 0.6);
  }

  [data-category="技术"]:hover .latest-card-dot {
    box-shadow: 0 0 8px rgba(8, 145, 178, 0.6);
  }

  [data-category="生活"]:hover .latest-card-dot {
    box-shadow: 0 0 8px rgba(234, 88, 12, 0.6);
  }

  [data-category="项目"]:hover .latest-card-dot {
    box-shadow: 0 0 8px rgba(8, 145, 178, 0.6);
  }

  /* 其他卡片变暗 */
  .latest-grid:hover .latest-card:not(:hover) {
    opacity: 0.45;
  }

  /* ===== 入场动画 ===== */
  .latest-card {
    opacity: 0;
    transform: translateY(20px);
  }

  .latest-card.animate-in {
    opacity: 1;
    transform: translateY(0);
    transition: all 0.7s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .latest-card:nth-child(1).animate-in { transition-delay: 0.1s; }
  .latest-card:nth-child(2).animate-in { transition-delay: 0.2s; }
  .latest-card:nth-child(3).animate-in { transition-delay: 0.3s; }
  .latest-card:nth-child(4).animate-in { transition-delay: 0.4s; }

  /* ===== 响应式 ===== */
  @media (max-width: 960px) {
    .latest-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 24px 20px;
    }
  }

  @media (max-width: 480px) {
    .latest-section {
      padding: 48px 0;
    }

    .latest-heading {
      font-size: 26px;
    }

    .latest-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px 16px;
    }

    .latest-card-title {
      font-size: 15px;
    }

    .latest-grid:hover .latest-card:not(:hover) {
      opacity: 1;
    }
  }
</style>

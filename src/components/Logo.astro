---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<a
  href="/"
  class:list={[
    "text-[var(--text-primary)] hover:opacity-80 transition-opacity inline-block",
    className
  ]}
  style="
    font-family: var(--font-display) !important;
    font-weight: 900;
    font-size: clamp(3rem, 8vw, 6rem);
    letter-spacing: -0.02em;
    line-height: 1.1;
  "
>
  RollingTheRock
</a>

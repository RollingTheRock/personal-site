---
interface Post {
  slug: string;
  data: {
    title: string;
  };
}

interface Props {
  prev?: Post;
  next?: Post;
}

const { prev, next } = Astro.props;
---

{(prev || next) && (
  <nav class="post-navigation grid grid-cols-1 md:grid-cols-2 gap-4 mt-12 pt-12 border-t border-[var(--border-color)]">
    {prev ? (
      <a
        href={`/blog/${prev.slug}`}
        class="group flex flex-col p-4 -mx-4 rounded-xl hover:bg-[var(--bg-secondary)] transition-colors duration-200"
      >
        <span class="text-xs text-[var(--text-muted)] uppercase tracking-wider mb-2 flex items-center gap-1">
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          上一篇
        </span>
        <span class="font-medium text-[var(--text-primary)] group-hover:text-[var(--text-secondary)] transition-colors line-clamp-2">
          {prev.data.title}
        </span>
      </a>
    ) : (
      <div />
    )}

    {next ? (
      <a
        href={`/blog/${next.slug}`}
        class="group flex flex-col items-end p-4 -mx-4 rounded-xl hover:bg-[var(--bg-secondary)] transition-colors duration-200 text-right"
      >
        <span class="text-xs text-[var(--text-muted)] uppercase tracking-wider mb-2 flex items-center gap-1">
          下一篇
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </span>
        <span class="font-medium text-[var(--text-primary)] group-hover:text-[var(--text-secondary)] transition-colors line-clamp-2">
          {next.data.title}
        </span>
      </a>
    ) : (
      <div />
    )}
  </nav>
)}

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

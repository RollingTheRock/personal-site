---
import BaseLayout from '../layouts/BaseLayout.astro';
import { GITHUB_URL, TWITTER_URL } from '../utils/constants';

const skills = [
  'TypeScript', 'React', 'Vue', 'Node.js', 'Python',
  'Rust', 'Go', 'PostgreSQL', 'Docker', 'AWS'
];

const experiences = [
  {
    title: '全栈开发者',
    company: '自由职业',
    period: '2024 - 至今',
    description: '专注于 Web 开发和区块链技术，为多个开源项目贡献代码。',
  },
];
---

<BaseLayout title="关于我" description="了解更多关于 RollingTheRock 的信息">
  <div class="max-w-medium mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-20">
    <!-- Header -->
    <div class="text-center mb-16">
      <div class="w-24 h-24 mx-auto mb-6 rounded-full bg-[var(--bg-tertiary)] flex items-center justify-center text-3xl">
        🚀
      </div>
      <h1 class="text-3xl md:text-4xl font-serif font-bold mb-4">关于我</h1>
      <p class="text-lg text-[var(--text-secondary)] max-w-lg mx-auto">
        热爱技术，追求极致。在这里分享我的学习历程和技术思考。
      </p>
    </div>

    <!-- Bio -->
    <section class="mb-16">
      <h2 class="text-xl font-semibold mb-4">简介</h2>
      <div class="prose prose-lg text-[var(--text-secondary)]">
        <p>
          你好，我是 <strong>RollingTheRock</strong>，一名热爱技术的全栈开发者。
          我对 Web 技术、区块链和开源软件充满热情。
        </p>
        <p>
          这个网站是我记录学习历程、分享技术文章和展示项目的地方。
          我相信知识分享的力量，希望通过写作帮助更多人学习和成长。
        </p>
        <p>
          在工作之余，我喜欢阅读技术书籍、参与开源项目、观看科幻电影。
          如果你对我的文章或项目感兴趣，欢迎通过社交媒体与我联系。
        </p>
      </div>
    </section>

    <!-- Skills -->
    <section class="mb-16">
      <h2 class="text-xl font-semibold mb-4">技术栈</h2>
      <div class="flex flex-wrap gap-2">
        {skills.map(skill => (
          <span class="px-3 py-1.5 bg-[var(--bg-secondary)] border border-[var(--border-color)] rounded-lg text-sm">
            {skill}
          </span>
        ))}
      </div>
    </section>

    <!-- Experience -->
    <section class="mb-16">
      <h2 class="text-xl font-semibold mb-4">经历</h2>
      <div class="space-y-6">
        {experiences.map(exp => (
          <div class="border-l-2 border-[var(--border-color)] pl-6">
            <h3 class="font-semibold">{exp.title}</h3>
            <p class="text-sm text-[var(--text-muted)] mb-2">
              {exp.company} · {exp.period}
            </p>
            <p class="text-[var(--text-secondary)]">{exp.description}</p>
          </div>
        ))}
      </div>
    </section>

    <!-- Contact -->
    <section>
      <h2 class="text-xl font-semibold mb-4">联系方式</h2>
      <div class="flex gap-4">
        <a
          href={GITHUB_URL}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 border border-[var(--border-color)] rounded-lg hover:bg-[var(--bg-secondary)] transition-colors"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
          </svg>
          GitHub
        </a>
        <a
          href={TWITTER_URL}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 border border-[var(--border-color)] rounded-lg hover:bg-[var(--bg-secondary)] transition-colors"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path>
          </svg>
          Twitter
        </a>
        <a
          href="mailto:2891887360@qq.com"
          class="inline-flex items-center gap-2 px-4 py-2 border border-[var(--border-color)] rounded-lg hover:bg-[var(--bg-secondary)] transition-colors"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="4" width="20" height="16" rx="2"></rect>
            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
          </svg>
          Email
        </a>
      </div>
    </section>
  </div>
</BaseLayout>

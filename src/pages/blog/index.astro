---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Sidebar from '../../components/Sidebar.astro';
import BlogCard from '../../components/BlogCard.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Get all categories and tags
const allCategories = [...new Set(posts.flatMap(p => p.data.categories))];
---

<BaseLayout title="博客" description="探索技术、分享思考的文章集合">
  <div class="max-w-wide mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-20">
    <div class="flex flex-col lg:flex-row gap-12">
      <!-- Main Content -->
      <main class="flex-1 page-transition">
        <!-- Header -->
        <div class="text-center mb-12">
          <h1 class="text-3xl md:text-4xl font-serif font-bold mb-4">博客</h1>
          <p class="text-[var(--text-secondary)] max-w-lg mx-auto">
            探索技术、分享思考的文章集合
          </p>
        </div>

        <!-- Categories -->
        {allCategories.length > 0 && (
          <div class="flex flex-wrap justify-center gap-2 mb-12">
            <a href="/blog" class="px-4 py-2 bg-[var(--text-primary)] text-[var(--bg-primary)] rounded-full text-sm">
              全部
            </a>
            {allCategories.map(cat => (
              <a
                href={`/blog/categories/${cat.toLowerCase()}`}
                class="px-4 py-2 border border-[var(--border-color)] rounded-full text-sm hover:bg-[var(--bg-secondary)] transition-colors"
              >
                {cat}
              </a>
            ))}
          </div>
        )}

        <!-- Posts List -->
        <div class="space-y-10">
          {sortedPosts.map(post => (
            <BlogCard
              title={post.data.title}
              description={post.data.description}
              slug={post.slug}
              date={post.data.date}
              categories={post.data.categories}
              image={post.data.image}
              layout="horizontal"
            />
          ))}
        </div>

        <!-- Empty State -->
        {sortedPosts.length === 0 && (
          <div class="text-center py-20">
            <p class="text-[var(--text-muted)]">暂无文章，敬请期待...</p>
          </div>
        )}
      </main>

      <!-- Sidebar (Desktop only) -->
      <div class="hidden lg:block">
        <div class="sticky top-24">
          <Sidebar />
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

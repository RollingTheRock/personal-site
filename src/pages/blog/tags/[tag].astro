---
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);
  const tags = [...new Set(posts.flatMap(p => p.data.tags))];

  return tags.map(tag => ({
    params: { tag: tag.toLowerCase() },
    props: { tag },
  }));
}

const { tag } = Astro.props;

const posts = await getCollection('blog', ({ data }) =>
  !data.draft && data.tags.includes(tag)
);
const sortedPosts = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

function formatDate(date: Date) {
  return new Intl.DateTimeFormat('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
}
---

<BaseLayout title={`标签: ${tag}`} description={`${tag} 标签下的所有文章`}>
  <div class="max-w-wide mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-20">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-3xl md:text-4xl font-serif font-bold mb-4">
        #{tag}
      </h1>
      <p class="text-[var(--text-secondary)]">
        共 {sortedPosts.length} 篇文章
      </p>
    </div>

    <!-- Posts List -->
    <div class="space-y-10">
      {sortedPosts.map(post => (
        <article class="group">
          <a href={`/blog/${post.slug}`} class="block">
            <div class="flex flex-col md:flex-row gap-6">
              {post.data.image && (
                <div class="md:w-1/3 aspect-video md:aspect-[4/3] overflow-hidden rounded-lg img-hover">
                  <img
                    src={post.data.image}
                    alt={post.data.title}
                    class="w-full h-full object-cover"
                  />
                </div>
              )}
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-3">
                  {post.data.categories.map(cat => (
                    <span class="text-xs font-medium text-[var(--text-muted)] uppercase tracking-wider">
                      {cat}
                    </span>
                  ))}
                  <span class="text-xs text-[var(--text-muted)]">
                    {formatDate(post.data.date)}
                  </span>
                </div>
                <h2 class="text-xl md:text-2xl font-serif font-semibold mb-2 group-hover:text-[var(--text-secondary)] transition-colors">
                  {post.data.title}
                </h2>
                <p class="text-[var(--text-secondary)] line-clamp-2">
                  {post.data.description}
                </p>
              </div>
            </div>
          </a>
        </article>
      ))}
    </div>

    <!-- Empty State -->
    {sortedPosts.length === 0 && (
      <div class="text-center py-20">
        <p class="text-[var(--text-muted)]">该标签下暂无文章</p>
      </div>
    )}

    <!-- Back to All Tags -->
    <div class="text-center mt-12">
      <a href="/blog" class="inline-flex items-center gap-2 text-[var(--text-secondary)] hover:text-[var(--text-primary)]">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="19" y1="12" x2="5" y2="12"></line>
          <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        返回博客列表
      </a>
    </div>
  </div>
</BaseLayout>

---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ImagePlaceholder from '../../components/ImagePlaceholder.astro';
import RelatedProjects from '../../components/RelatedProjects.astro';
import ContentNavigation from '../../components/ContentNavigation.astro';
import ShareButtons from '../../components/ShareButtons.astro';
import { getPostsByType, getPostBySlug, getPostContent, type Post } from '../../lib/notion-cms.js';
import { Markdown } from '@astropub/md';

export async function getStaticPaths() {
  const projects = await getPostsByType('项目');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

type Props = {
  project: Post;
};

const { project } = Astro.props;

// 获取项目内容（支持 Notion + 本地回退）
const content = await getPostContent(project.id, project.slug, project.type);

// Get all projects for related and navigation
const allProjects = await getPostsByType('项目');
const currentIndex = allProjects.findIndex(p => p.slug === project.slug);
const prevProject = currentIndex < allProjects.length - 1 ? allProjects[currentIndex + 1] : undefined;
const nextProject = currentIndex > 0 ? allProjects[currentIndex - 1] : undefined;

const canonicalURL = new URL(`/projects/${project.slug}`, Astro.site || 'https://rollingtherock.blog').toString();

function formatDateYearMonth(dateString: string) {
  const date = new Date(dateString);
  return `${date.getFullYear()}.${String(date.getMonth() + 1).padStart(2, '0')}`;
}
---

<BaseLayout
  title={project.title}
  description={project.description}
  image={project.image}
  type="article"
>
  <article class="py-12 md:py-20">
    <!-- Header - Centered Layout -->
    <header class="max-w-medium mx-auto px-4 sm:px-6 lg:px-8 text-center mb-12">
      <!-- Meta Info Row -->
      <div class="flex items-center justify-center gap-2 text-sm mb-4">
        <span class="text-[#06B6D4] font-medium">项目</span>
        <span class="text-[var(--text-muted)]">·</span>
        <span class="text-[var(--text-secondary)]">{formatDateYearMonth(project.date)}</span>
      </div>

      <h1 class="text-3xl md:text-4xl lg:text-5xl font-serif font-bold mb-4">
        {project.title}
      </h1>

      <p class="text-lg text-[var(--text-secondary)] mb-6">
        {project.description}
      </p>

      <!-- Tech Stack - Plain Text -->
      <div class="text-sm text-[var(--text-muted)] text-center mb-8">
        {project.tags.map((t, i) => (
          <span>
            {i > 0 && <span class="mx-1.5">·</span>}
            {t}
          </span>
        ))}
      </div>

      <!-- Links -->
      <div class="flex justify-center gap-4">
        {project.slug === 'fomo-killer' && (
          <a
            href="https://github.com/RollingTheRock/ai-daily-digest"
            target="_blank"
            rel="noopener noreferrer"
            class="project-btn"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
            </svg>
            查看源码
          </a>
        )}
      </div>
    </header>

    <!-- Cover Image -->
    <div class="max-w-medium mx-auto px-4 sm:px-6 lg:px-8 mb-12">
      {project.image ? (
        <div class="overflow-hidden rounded-lg">
          <img
            src={project.image}
            alt={project.title}
            class="w-full aspect-video object-cover"
          />
        </div>
      ) : (
        <ImagePlaceholder alt={project.title} aspectRatio="16/9" class="w-full rounded-lg" />
      )}
    </div>

    <!-- Content -->
    <div class="max-w-article mx-auto px-4 sm:px-6 lg:px-8">
      <div class="article-content">
        <Markdown of={content} />
      </div>

      <!-- Share Buttons -->
      <div class="mt-12 pt-8 border-t border-[var(--border-color)]">
        <ShareButtons
          title={project.title}
          url={canonicalURL}
          description={project.description}
        />
      </div>

      <!-- Navigation -->
      <ContentNavigation
        prev={prevProject ? { slug: prevProject.slug, data: { title: prevProject.title } } : undefined}
        next={nextProject ? { slug: nextProject.slug, data: { title: nextProject.title } } : undefined}
        basePath="/projects"
        prevLabel="上一个项目"
        nextLabel="下一个项目"
      />

      <!-- Related Projects -->
      <RelatedProjects
        currentSlug={project.slug}
        tech={project.tags}
        allProjects={allProjects.map(p => ({ ...p, data: { title: p.title, tech: p.tags } }))}
      />
    </div>
  </article>
</BaseLayout>

<style>
  .project-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border: 1px solid var(--border-color);
    border-radius: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-secondary);
    transition: all 0.3s ease;
  }
  .project-btn:hover {
    border-color: #06B6D4;
    color: #06B6D4;
    background: rgba(6, 182, 212, 0.1);
  }
</style>

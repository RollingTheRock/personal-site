---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ProjectCard from '../../components/ProjectCard.astro';
import { getPostsByType } from '../../lib/notion-cms.js';

const projects = await getPostsByType('项目');
---

<BaseLayout title="项目" description="我的开源项目和个人作品">
  <div class="max-w-wide mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-20">
    <!-- Page Header -->
    <div class="page-header">
      <div class="page-header-left">
        <h1 class="page-header-title">Projects</h1>
        <p class="page-header-subtitle">我的开源项目和个人作品</p>
      </div>
      <div class="page-header-right">
        <!-- 项目页暂无右侧元素，留空即可 -->
      </div>
    </div>

    <!-- Projects Grid -->
    <div class="grid md:grid-cols-2 gap-6 page-transition projects-grid">
      {projects.map(project => (
        <ProjectCard
          title={project.title}
          description={project.description}
          slug={project.slug}
          image={project.image}
          tech={project.tags}
          github={project.slug === 'fomo-killer' ? 'https://github.com/RollingTheRock/ai-daily-digest' : undefined}
        />
      ))}
    </div>

    <!-- Empty State -->
    {projects.length === 0 && (
      <div class="text-center py-20">
        <p class="text-[var(--text-muted)]">暂无项目，敬请期待...</p>
      </div>
    )}
  </div>
</BaseLayout>

<style>
  /* Page Header Styles */
  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border-color);
    margin-bottom: 2rem;
  }

  .page-header-title {
    font-family: 'Playfair Display', serif;
    font-style: italic;
    font-size: 36px;
    color: var(--text-primary);
    margin: 0;
    line-height: 1.2;
  }

  .page-header-subtitle {
    font-size: 14px;
    color: var(--text-secondary);
    margin-top: 0.25rem;
  }

  /* Projects Grid - 互斥暗化效果 */
  .projects-grid:hover > article {
    opacity: 0.5;
    transition: opacity 0.3s ease;
  }
  .projects-grid:hover > article:hover {
    opacity: 1;
  }
  .projects-grid > article {
    transition: opacity 0.3s ease;
  }

  /* Responsive */
  @media (max-width: 960px) {
    .page-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
  }

  @media (max-width: 640px) {
    .page-header-title {
      font-size: 28px;
    }
  }
</style>

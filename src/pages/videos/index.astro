---
import BaseLayout from '../../layouts/BaseLayout.astro';
import VideoCard from '../../components/VideoCard.astro';
import { getCollection } from 'astro:content';

const videos = await getCollection('videos');
const sortedVideos = videos.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="视频" description="我的视频内容">
  <div class="max-w-wide mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-20">
    <!-- Header -->
    <div class="text-center mb-12 page-transition">
      <h1 class="text-3xl md:text-4xl font-serif font-bold mb-4">视频</h1>
      <p class="text-[var(--text-secondary)] max-w-lg mx-auto">
        我的视频内容
      </p>
    </div>

    <!-- Videos Grid -->
    <div class="grid md:grid-cols-2 gap-8 page-transition">
      {sortedVideos.map(video => (
        <VideoCard
          title={video.data.title}
          slug={video.slug}
          date={video.data.date}
          platform={video.data.platform}
          thumbnail={video.data.thumbnail}
        />
      ))}
    </div>

    <!-- Empty State -->
    {sortedVideos.length === 0 && (
      <div class="text-center py-20">
        <p class="text-[var(--text-muted)]">暂无视频，敬请期待...</p>
      </div>
    )}
  </div>
</BaseLayout>
